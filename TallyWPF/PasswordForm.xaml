<Window x:Class="TallyWPF.PasswordForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TallyWPF"
        mc:Ignorable="d"
        Title="PasswordForm" Height="250" Width="300" WindowStartupLocation="CenterScreen"
		Loaded="Window_Loaded">
	<Grid>
		<StackPanel HorizontalAlignment="Stretch">
			<Label FontSize="18" Content="Enter Passoword" Margin="20"></Label>
			<PasswordBox FontSize="18" x:Name="passwordTextBox" Margin="20" />
			<Button x:Name="okButton" FontSize="18" Content="OK" IsDefault="True" Margin="20" Click="okButton_Click"></Button>
		</StackPanel>
    </Grid>
</Window>
